APP_NAME=FundSignal
APP_VERSION=0.1.0
ENVIRONMENT=development
LOG_LEVEL=INFO
TELEMETRY_FORMAT=json
TELEMETRY_PATH=logs/pipeline.log
FEEDBACK_ENABLED=true

# Provider keys (set in CI/GitHub Secrets for production)
EXA_API_KEY=replace-me
YOUCOM_API_KEY=replace-me
TAVILY_API_KEY=replace-me
OPENAI_API_KEY=replace-me
SCORING_MODEL=gpt-4o-mini
SCORING_SYSTEM_PROMPT_PATH=configs/scoring/system_prompt.md
SCORING_TEMPERATURE=0.2
SCORING_REGRESSION_FIXTURE=tests/fixtures/scoring/regression_companies.json
SCORING_BUNDLE_FIXTURE_DIR=tests/fixtures/bundles/intuition_regression

# Storage & publishing
SUPABASE_URL=https://example.supabase.co
SUPABASE_SERVICE_KEY=replace-me
SUPABASE_BUCKET=fundsignal-artifacts
SUPABASE_PROOF_QA_TABLE=proof_link_audits
BUNDLE_HMAC_KEY=replace-me
PROOF_STORAGE_BUCKET=fundsignal-proofs
PROOF_CACHE_TTL_SECONDS=300

FUND_SIGNAL_MODE=fixture
FUND_SIGNAL_SOURCE=local
RESOLVER_RULES_PATH=configs/resolver_rules.v1.1.yaml
PROOF_QA_ALERT_WEBHOOK=
PROOF_QA_DISABLE_ALERTS=false
PROOF_QA_CONCURRENCY=25
PROOF_QA_RETRY_LIMIT=3
PROOF_QA_FAILURE_THRESHOLD=0.03

# Retention policy overrides (days; must be >0)
RETENTION_RAW_DAYS=30
RETENTION_CANONICAL_DAYS=90

# UI smoke test defaults
UI_BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:8000
PLAYWRIGHT_HEADED=false
UI_SMOKE_COMPANY_ID=11111111-0000-0000-0000-000000000001
UI_SMOKE_COMPANY_NAME="High Growth SaaS"
UI_SMOKE_SCORING_RUN_ID=ui-smoke
UI_SMOKE_DISABLE_PROOF_PATCH=false
